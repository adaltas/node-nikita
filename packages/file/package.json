{
  "name": "@nikitajs/file",
  "version": "1.0.0-alpha.3",
  "description": "Provides Nikita actions to work with files.",
  "keywords": [
    "nikita",
    "build",
    "cli",
    "deploy",
    "fs",
    "install",
    "masson",
    "ssh",
    "system",
    "task"
  ],
  "author": "David Worms <david@adaltas.com>",
  "bugs": {
    "email": "open@adaltas.com",
    "url": "https://github.com/adaltas/node-nikita/issues"
  },
  "coffeelintConfig": {
    "indentation": {
      "level": "error",
      "value": 2
    },
    "line_endings": {
      "level": "error",
      "value": "unix"
    },
    "max_line_length": {
      "level": "ignore"
    },
    "no_backticks": {
      "level": "ignore"
    },
    "no_nested_string_interpolation": {
      "level": "ignore"
    }
  },
  "contributors": [
    {
      "name": "David Worms",
      "email": "david@adaltas.com"
    },
    {
      "name": "Alexander Hoffmann",
      "email": "alexander@adaltas.com"
    },
    {
      "name": "Sergei Kudinov",
      "email": "sergei@adaltas.com"
    }
  ],
  "dependencies": {
    "cson": "^8.2.0",
    "dedent": "^1.5.1",
    "diff": "^5.1.0",
    "handlebars": "^4.7.8",
    "ini": "^4.1.1",
    "mixme": "^1.1.0",
    "xmlbuilder": "^15.1.1",
    "xmldom": "^0.6.0"
  },
  "devDependencies": {
    "@nikitajs/log": "^2.0.0-alpha.0",
    "coffeescript": "^2.7.0",
    "eslint": "^8.56.0",
    "eslint-plugin-coffee": "^0.1.15",
    "mocha": "^10.2.0",
    "mocha-they": "^0.1.3",
    "should": "^13.2.3"
  },
  "peerDependencies": {
    "@nikitajs/core": "^1.0.0-alpha.1"
  },
  "engines": {
    "node": ">= 10.0.0"
  },
  "exports": {
    ".": "./lib/index.js",
    "./register": "./lib/register.js",
    "./utils": "./lib/utils/index.js",
    "./utils/*": "./lib/utils/*.js",
    "./*": "./lib/*/index.js"
  },
  "files": [
    "/lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://nikita.js.org/",
  "license": "MIT",
  "main": "./lib/index",
  "mocha": {
    "inline-diffs": true,
    "loader": "../core/test/loaders/all.js",
    "recursive": true,
    "reporter": "spec",
    "require": [
      "@nikitajs/file/register",
      "@nikitajs/log/register",
      "should"
    ],
    "throw-deprecation": true,
    "timeout": 10000
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adaltas/node-nikita",
    "directory": "packages/file"
  },
  "scripts": {
    "test": "npm run test:local",
    "test:local": "mocha 'test/**/*.coffee'"
  },
  "type": "module"
}
