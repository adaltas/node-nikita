{
  "name": "@nikitajs/file",
  "version": "1.0.0-alpha.0",
  "description": "Automation and deployment solution of applications and infrastructures.",
  "keywords": [
    "nikita",
    "build",
    "cli",
    "deploy",
    "fs",
    "install",
    "masson",
    "ssh",
    "system",
    "task"
  ],
  "author": "David Worms <david@adaltas.com>",
  "bugs": {
    "email": "open@adaltas.com",
    "url": "https://github.com/adaltas/node-nikita/issues"
  },
  "coffeelintConfig": {
    "indentation": {
      "level": "error",
      "value": 2
    },
    "line_endings": {
      "level": "error",
      "value": "unix"
    },
    "max_line_length": {
      "level": "ignore"
    },
    "no_backticks": {
      "level": "ignore"
    },
    "no_nested_string_interpolation": {
      "level": "ignore"
    }
  },
  "contributors": [
    {
      "name": "David Worms",
      "email": "david@adaltas.com"
    },
    {
      "name": "Alexander Hoffmann",
      "email": "alexander@adaltas.com"
    },
    {
      "name": "Sergei Kudinov",
      "email": "sergei@adaltas.com"
    }
  ],
  "dependencies": {
    "diff": "^5.0.0",
    "handlebars": "^4.7.6",
    "ini": "^1.3.8",
    "mixme": "^0.4.0",
    "season": "^6.0.2",
    "xmlbuilder": "^15.1.1",
    "xmldom": "^0.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "coffeescript": "^2.5.1",
    "eslint": "^7.18.0",
    "eslint-plugin-coffee": "^0.1.13",
    "mocha": "^8.2.1",
    "mocha-they": "^0.1.2",
    "should": "^13.2.3"
  },
  "peerDependencies": {
    "@nikitajs/core": "^0.9.7"
  },
  "engines": {
    "node": ">= 10.0.0"
  },
  "files": [
    "/lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://nikita.js.org/",
  "license": "MIT",
  "main": "./lib/index",
  "mocha": {
    "throw-deprecation": true,
    "require": [
      "should",
      "coffeescript/register",
      "@nikitajs/file/src/register"
    ],
    "inline-diffs": true,
    "timeout": 40000,
    "reporter": "spec",
    "recursive": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adaltas/node-nikita",
    "directory": "packages/file"
  },
  "scripts": {
    "build": "coffee -b -o lib src && find lib -type f | xargs sed -i -e 's/@nikitajs\\/file\\/src/@nikitajs\\/file\\/lib/g'",
    "pretest": "npm run build",
    "test": "mocha 'test/**/*.coffee'",
    "testall": "mocha 'test/**/*.coffee'"
  }
}
