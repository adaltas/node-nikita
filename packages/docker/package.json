{
  "name": "@nikitajs/docker",
  "version": "1.0.0-alpha.9",
  "description": "Provides Nikita actions for various Docker operations.",
  "keywords": [
    "nikita",
    "build",
    "cli",
    "deploy",
    "fs",
    "install",
    "masson",
    "ssh",
    "system",
    "task"
  ],
  "author": "David Worms <david@adaltas.com>",
  "bugs": {
    "url": "https://github.com/adaltas/node-nikita/issues"
  },
  "contributors": [
    {
      "name": "David Worms",
      "email": "david@adaltas.com"
    },
    {
      "name": "Sergei Kudinov",
      "email": "sergei@adaltas.com"
    }
  ],
  "dependencies": {
    "@nikitajs/file": "^1.0.0-alpha.9",
    "dedent": "^1.5.3"
  },
  "devDependencies": {
    "@nikitajs/network": "^1.0.0-alpha.9",
    "coffeescript": "^2.7.0",
    "mocha": "^10.7.0",
    "mocha-they": "^0.1.3",
    "should": "^13.2.3"
  },
  "engines": {
    "node": ">= 10.0.0"
  },
  "exports": {
    ".": "./lib/index.js",
    "./register": "./lib/register.js",
    "./utils": "./lib/utils/index.js",
    "./utils/*": "./lib/utils/*.js",
    "./*": "./lib/*/index.js"
  },
  "files": [
    "/lib"
  ],
  "homepage": "https://nikita.js.org/",
  "license": "MIT",
  "mocha": {
    "inline-diffs": true,
    "loader": "../core/test/loaders/all.js",
    "recursive": true,
    "reporter": "spec",
    "require": [
      "@nikitajs/docker/register",
      "@nikitajs/network/register",
      "should"
    ],
    "throw-deprecation": true,
    "timeout": 20000
  },
  "peerDependencies": {
    "@nikitajs/core": "^1.0.0-alpha.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adaltas/node-nikita",
    "directory": "packages/docker"
  },
  "scripts": {
    "test": "npm run test:local && npm run test:env",
    "test:env": "env/run.sh",
    "test:local": "mocha 'test/**/*.coffee'"
  },
  "type": "module"
}
