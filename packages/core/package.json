{
  "name": "@nikitajs/core",
  "version": "1.0.0-alpha.3",
  "description": "Provides the Nikita engine and the core Nikita actions and plugins.",
  "keywords": [
    "nikita",
    "build",
    "cli",
    "deployment",
    "automation",
    "IaS",
    "fs",
    "install",
    "ssh",
    "system",
    "task"
  ],
  "author": "David Worms <david@adaltas.com>",
  "bugs": {
    "email": "open@adaltas.com",
    "url": "https://github.com/adaltas/node-nikita/issues"
  },
  "coffeelintConfig": {
    "indentation": {
      "level": "error",
      "value": 2
    },
    "line_endings": {
      "level": "error",
      "value": "unix"
    },
    "max_line_length": {
      "level": "ignore"
    },
    "no_backticks": {
      "level": "ignore"
    },
    "no_nested_string_interpolation": {
      "level": "ignore"
    }
  },
  "contributors": [
    {
      "name": "David Worms",
      "email": "david@adaltas.com"
    },
    {
      "name": "Pierre Sauvage",
      "email": "pierre@adaltas.com"
    },
    {
      "name": "Lucas Bakalian",
      "email": "lucas@adaltas.com"
    },
    {
      "name": "Alexander Hoffmann",
      "email": "alexander@adaltas.com"
    },
    {
      "name": "Sergei Kudinov",
      "email": "sergei@adaltas.com"
    }
  ],
  "dependencies": {
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "ajv-keywords": "^5.1.0",
    "each": "^2.4.0",
    "js-yaml": "^4.1.0",
    "minimatch": "^5.1.0",
    "mixme": "^0.5.4",
    "pad": "^3.2.0",
    "plug-and-play": "^2.5.6",
    "regexp-quote": "^0.0.0",
    "self-templated": "^0.2.3",
    "semver": "^7.3.7",
    "ssh2-connect": "^3.4.1",
    "ssh2-exec": "^0.7.3",
    "ssh2-fs": "^1.1.2",
    "stack-trace": "^0.0.10",
    "tilde-expansion": "^0.0.0",
    "toposort": "^2.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "@nikitajs/lxd-runner": "^1.0.0-alpha.0",
    "coffeescript": "^2.7.0",
    "eslint": "^8.18.0",
    "eslint-plugin-coffee": "^0.1.15",
    "mocha": "^10.0.0",
    "mocha-they": "^0.1.3",
    "should": "^13.2.3"
  },
  "engines": {
    "node": ">= 10.0.0"
  },
  "files": [
    "/lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://nikita.js.org/",
  "license": "MIT",
  "main": "./lib/index",
  "mocha": {
    "throw-deprecation": true,
    "require": [
      "should",
      "coffeescript/register"
    ],
    "inline-diffs": true,
    "timeout": 30000,
    "reporter": "spec",
    "recursive": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adaltas/node-nikita",
    "directory": "packages/core"
  },
  "scripts": {
    "build": "coffee -b -o lib src && find lib -type f | xargs sed -i -e 's/@nikitajs\\/core\\/src/@nikitajs\\/core\\/lib/g'",
    "lint": "eslint 'src/**/*.coffee'",
    "lint-fix": "eslint --fix 'src/**/*.coffee'",
    "test": "npm run test:local && npm run test:env",
    "test:env": "env/run.sh",
    "test:local": "mocha --node-flags '--unhandled-rejections=strict' 'test/**/*.coffee'"
  }
}
