{
  "config": {
    "type": "object",
    "properties": {
      "uid": {
        "type": "string",
        "description": "Name of the user to add or modify, same as the `username`."
      },
      "username": {
        "type": "string",
        "description": "Name of the user to add or modify, alias of `uid`."
      },
      "attributes": {
        "type": "object",
        "properties": {
          "givenname": {
            "type": "string"
          },
          "sn": {
            "type": "string"
          },
          "mail": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "type": "string"
            }
          },
          "userpassword": {
            "type": "string"
          }
        },
        "description": "Attributes associated with the user to add or modify."
      },
      "force_userpassword": {
        "type": "boolean",
        "description": "Force the password to be re-initialized on user update."
      },
      "connection": {
        "type": "object",
        "$ref": "module://@nikitajs/network/http#/definitions/config",
        "required": [
          "principal",
          "password"
        ]
      }
    },
    "required": [
      "attributes",
      "connection",
      "uid"
    ]
  }
}
