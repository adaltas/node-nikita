{
  "name": "@nikitajs/tools",
  "description": "Nikita tools actions.",
  "keywords": [
    "nikita",
    "build",
    "cli",
    "deploy",
    "fs",
    "install",
    "masson",
    "ssh",
    "system",
    "task"
  ],
  "version": "1.0.0-alpha.1",
  "author": "David Worms <david@adaltas.com>",
  "bugs": {
    "url": "https://github.com/adaltas/node-nikita/issues"
  },
  "coffeelintConfig": {
    "indentation": {
      "level": "error",
      "value": 2
    },
    "line_endings": {
      "level": "error",
      "value": "unix"
    },
    "max_line_length": {
      "level": "ignore"
    }
  },
  "contributors": [
    {
      "name": "David Worms",
      "email": "david@adaltas.com"
    },
    {
      "name": "Sergei Kudinov",
      "email": "sergei@adaltas.com"
    }
  ],
  "dependencies": {
    "@nikitajs/file": "^1.0.0-alpha.1",
    "@nikitajs/service": "^1.0.0-alpha.1",
    "dayjs": "^1.10.4",
    "jsesc": "^3.0.2",
    "mixme": "^0.5.0"
  },
  "devDependencies": {
    "coffeescript": "^2.5.1",
    "mocha": "^8.3.1",
    "mocha-they": "^0.1.2",
    "should": "^13.2.3"
  },
  "peerDependencies": {
    "@nikitajs/core": "^1.0.0-alpha"
  },
  "engines": {
    "node": ">= 10.0.0"
  },
  "files": [
    "/lib"
  ],
  "mocha": {
    "throw-deprecation": true,
    "require": [
      "should",
      "coffeescript/register",
      "@nikitajs/tools/src/register"
    ],
    "inline-diffs": true,
    "timeout": 40000,
    "reporter": "spec",
    "recursive": true
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://nikita.js.org/",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/adaltas/node-nikita",
    "directory": "packages/tools"
  },
  "scripts": {
    "build": "coffee -b -o lib src && find lib -type f | xargs sed -i -e 's/@nikitajs\\/tools\\/src/@nikitajs\\/tools\\/lib/g'",
    "test": "npm run test:local && npm run test:env",
    "test:env": "env/run.sh",
    "test:local": "mocha 'test/**/*.coffee'"
  }
}
