{
  "name": "@nikitajs/log",
  "version": "2.0.0-alpha.2",
  "description": "Provides Nikita actions for logging.",
  "keywords": [
    "nikita",
    "automation",
    "deploy",
    "log",
    "logging",
    "debug",
    "markdown",
    "csv",
    "fs",
    "cli"
  ],
  "author": "David Worms <david@adaltas.com>",
  "bugs": {
    "email": "open@adaltas.com",
    "url": "https://github.com/adaltas/node-nikita/issues"
  },
  "coffeelintConfig": {
    "indentation": {
      "level": "error",
      "value": 2
    },
    "line_endings": {
      "level": "error",
      "value": "unix"
    },
    "max_line_length": {
      "level": "ignore"
    },
    "no_backticks": {
      "level": "ignore"
    },
    "no_nested_string_interpolation": {
      "level": "ignore"
    }
  },
  "contributors": [
    {
      "name": "David Worms",
      "email": "david@adaltas.com"
    },
    {
      "name": "Alexander Hoffmann",
      "email": "alexander@adaltas.com"
    },
    {
      "name": "Sergei Kudinov",
      "email": "sergei@adaltas.com"
    }
  ],
  "dependencies": {
    "colors": "^1.4.0",
    "mixme": "^1.1.0",
    "pad": "^3.2.0"
  },
  "devDependencies": {
    "coffeescript": "^2.7.0",
    "eslint": "^9.4.0",
    "eslint-plugin-coffee": "^0.1.15",
    "mocha": "^10.4.0",
    "mocha-they": "^0.1.3",
    "should": "^13.2.3"
  },
  "peerDependencies": {
    "@nikitajs/core": "^1.0.0-alpha.1"
  },
  "engines": {
    "node": ">= 10.0.0"
  },
  "exports": {
    "./register": "./lib/register.js",
    "./*": "./lib/*/index.js"
  },
  "files": [
    "/lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://nikita.js.org/",
  "license": "MIT",
  "main": "./lib/index",
  "mocha": {
    "inline-diffs": true,
    "loader": "../core/test/loaders/all.js",
    "recursive": true,
    "reporter": "spec",
    "require": [
      "@nikitajs/log/register",
      "should"
    ],
    "throw-deprecation": true,
    "timeout": 3000
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adaltas/node-nikita",
    "directory": "packages/log"
  },
  "scripts": {
    "test": "npm run test:local",
    "test:local": "mocha 'test/**/*.coffee'"
  },
  "type": "module"
}
